!!! 5

%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    %title
      New project

    = csrf_meta_tags

    = rails_connector_header_tags

    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag('http://html5shim.googlecode.com/svn/trunk/html5.js')

    = stylesheet_link_tag('application', media: 'all')

    %link{href: '/favicon.ico', rel: 'shortcut icon'}

  %body{body_attributes}
    = render_cell(:main_navigation, :show, @obj)

    .container
      .content
        .row
          .span9
            = render_cell(:flash_messages, :show, flash)

            = yield

          .span3
            = render_cell(:meta_navigation, :show, @obj, current_user)

            .well.sidebar-nav
              %h3
                Sidebar

              %ul.nav.nav-list
                %li.nav-header
                  Sidebar

                %li
                  = link_to('/path1') do
                    Link 1

                %li
                  = link_to('/path2') do
                    Link 2

                %li
                  = link_to('/path3') do
                    Link 3

    .container
      = render_cell(:footer, :show)

    = javascript_include_tag('application')

    = rails_connector_after_content_tags

    = render_cell(:main_navigation, :highlight, @obj)